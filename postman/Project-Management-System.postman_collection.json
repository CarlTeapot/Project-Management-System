{
  "info": {
    "name": "Project Management System",
    "description": "API collection for Project Management System with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
+    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "project_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "task_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "Create Project",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('project_id', response.publicId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Project\",\n  \"description\": \"Project description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/projects",
              "host": ["{{base_url}}"],
              "path": ["api", "projects"]
            }
          }
        },
        {
          "name": "Get Project",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}"]
            }
          }
        },
        {
          "name": "Update Project",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Project Name\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}"]
            }
          }
        },
        {
          "name": "Delete Project",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('task_id', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Task description\",\n  \"taskPriority\": \"MEDIUM\",\n  \"dueDate\": \"2025-12-31T23:59:59\",\n  \"assignedUserEmail\": \"assignee@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}", "tasks"]
            }
          }
        },
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}/tasks?page=0&size=10&status=TODO&taskPriority=HIGH",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}", "tasks"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "TODO"
                },
                {
                  "key": "taskPriority",
                  "value": "HIGH"
                }
              ]
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Task Title\",\n  \"description\": \"Updated description\",\n  \"status\": \"IN_PROGRESS\",\n  \"taskPriority\": \"HIGH\",\n  \"dueDate\": \"2025-12-31T12:00:00\",\n  \"assignedUserId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}/tasks/{{task_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}", "tasks", "{{task_id}}"]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}/tasks/{{task_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}", "tasks", "{{task_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Invitations",
      "item": [
        {
          "name": "Send Invitation",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/invitations?projectPublicId={{project_id}}&userEmail=invitee@example.com",
              "host": ["{{base_url}}"],
              "path": ["api", "invitations"],
              "query": [
                {
                  "key": "projectPublicId",
                  "value": "{{project_id}}"
                },
                {
                  "key": "userEmail",
                  "value": "invitee@example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Accept Invitation",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/invitations/accept?projectPublicId={{project_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "invitations", "accept"],
              "query": [
                {
                  "key": "projectPublicId",
                  "value": "{{project_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Decline Invitation",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/invitations/decline?projectPublicId={{project_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "invitations", "decline"],
              "query": [
                {
                  "key": "projectPublicId",
                  "value": "{{project_id}}"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
